/* global ReactDOM*/
/*global React*/

const rootEl = document.getElementById('root'),
start = 'Running',
stop = 'Stopped';

let count = 0;  
const  listOfCars = [];
class AddCar extends React.Component{
    constructor(props){
       super(props)
       this.state={
           listOfCars:props.carsList,
       }
    }
    createCar=()=>{
        count++;
        this.setState({
                listOfCars :listOfCars.push(<li key={Math.random()}><CarFleet/></li>),
        })
    }
    
    render(){
        return(<div>
                    <div className="flex-end">
                        <button className="add-car-button" onClick={this.createCar}>Add Car</button>
                    </div>
                    
                    <ul>{listOfCars}</ul>
                </div>)
            
    }
}
class CarFleet extends React.Component{
