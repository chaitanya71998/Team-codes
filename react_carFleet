            status:'Stopped',//Running//with speed
            enigne:'Start',//Stop
        }
    }
    startAndStop=()=>{
        
    }
    closeTheCar=()=>{
        
    }
    accelerate=()=>{
        
    }
    decelerate=()=>{
        
    }
    render(){
        return(
            <div>
                <div>Car no:{count}</div>
                    <div className="car-block">
                        <div>
                        <button className="start" onClick={this.startAndStop}>{this.state.enigne}</button>
                        <button className="close" onClick={this.closeTheCar}>{this.state.enigne}</button>
                        </div>
                        
                        <div className="car-running-status">Status: {this.state.status}</div>
                        
                        <div className='third-block'>
                            <button className="acceleration"onClick={this.accelerate}>Acclerate</button>
                            <button className="deceleration"onClick={this.decelerate}>Decelerate</button>
                        </div>
                    </div>
            </div>)
    }
 }
